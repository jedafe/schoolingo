datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  posts     Post[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Post {
  author      User?    @relation(fields: [Posts], references: [id])
  Posts       String?
  content     Json?
  createdAt   DateTime @default(now())
  description String?  @unique
  id          String   @id @default(cuid())
  title       String?
  updatedAt   DateTime @updatedAt
}
